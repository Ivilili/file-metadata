<!DOCTYPE html>
<html>
<head>
 
    <title>Document</title>
</head>
<body>
 <form> 
  <select name="pjesme"> </select> 
  <br />
  Autor: <input type="text" name="autor" /> <br />
  Naziv: <input type="text" name="naziv" /> <br />

</form> 
<script>
    var pjesme = {
        WalkingOnSunshine : {
            naslov: "Walking on Sunshine",
            autor: "Someone",
            link: "somethingsomwthing"
        },
        Burning : {
            naslov: "Burning",
            autor: "Someone",
            link: "somethingsomwthing"
        },
        FireAndWater : {
            naslov: "Fire and Water",
            autor: "Someone",
            link: "somethingsomwthing"
        }
    }

    function popuni(){
     var target = document.forms[0].pjesme;
     target.options.length = 0;
     target.onChange = function(){
         var x = this.value;
         var odabranaPjesma = pjesma[x];
         this.form.autor.value = odabranaPjesma.autor;
         this.form.naziv.value = odabranaPjesma.naziv;
     }
     target.options.add(new Option("Odaberi pjesmu:"), -1);
     for(var i in pjesme){
         var naslov = pjesme[i].naslov;
         var option = new Option(naslov, i);
         target.options.add(option);
     }
    }
    popuni();
</script>
            
</body>
</html>

